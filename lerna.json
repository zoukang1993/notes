{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "changelog": {
     "repo": "zk93/notes",
     "labels": {
        "enhancement": ":rocket: Enhancement",
        "bug": ":bug: Bug Fix",
        "doc": "Refine Doc",
        "feat": "New Feature"
    },
    "cacheDir": ".changelog"
  }
}
